rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /signals/{signalId} {
      allow read: if true;
      allow write: if false;
    }
    match /simulated_trades/{tradeId} {
      allow read: if true;
      allow write: if false;
    }
    match /portfolios/{market} {
      allow read: if true;
      allow write: if false;
    }
    match /markets/{marketId} {
      allow read: if true;
      allow write: if false;
    }
  }
}
